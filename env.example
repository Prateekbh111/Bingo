# Database
DATABASE_URL=postgresql://bingo_user:bingo_password@localhost:5432/bingo

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-to-a-random-string

# Pusher (for real-time features)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=your-pusher-cluster

# Public Pusher variables (exposed to client)
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
NEXT_PUBLIC_PUSHER_CLUSTER=your-pusher-cluster

# WebSocket Server (ws or wss depending on if you have certificate)
WS_URL=ws://localhost:8080

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# SSL Certificates (optional - for HTTPS WebSocket server)
# Provide full certificate content as single line (use \n for line breaks)
SSL_CERT=-----BEGIN CERTIFICATE-----\nYour_Certificate_Content_Here\n-----END CERTIFICATE-----
SSL_KEY=-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Content_Here\n-----END PRIVATE KEY-----

