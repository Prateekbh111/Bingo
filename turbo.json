{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "DATABASE_URL",
        "NEXT_PUBLIC_WEB_SOCKET_URL",
        "NEXT_PUBLIC_WS_PORT"
      ],
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "env": [
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "DATABASE_URL",
        "NEXT_PUBLIC_WEB_SOCKET_URL",
        "NEXT_PUBLIC_WS_PORT"
      ],
      "dependsOn": [
        "build"
      ],
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ]
    }
  }
}